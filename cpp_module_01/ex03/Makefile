CC = c++

CFLAGS = -Wall -Wextra -Werror -std=c++98

NAME := HUMAN

SRCS := main.cpp \
		HumanA.cpp \
		HumanB.cpp \
		Weapon.cpp \

OBJS := $(SRCS:%.cpp=%.o)

%.o : %.cpp
		$(CC) $(CFLAGS) $< -c

$(NAME) : $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $@

all : $(NAME)

clean:
	rm -rf $(OBJS)

fclean: clean
	rm -rf $(NAME)

re: fclean all

.PHONY: all clean fclean re